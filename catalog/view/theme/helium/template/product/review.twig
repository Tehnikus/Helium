{% if review_list.reviews %}
<div id="js_reviews">
  {% for review in review_list.reviews %}
    <table role="comment" class="table table-striped table-bordered js-product-review">
      <tr>
        <td style="width: 50%;"><span class="strong">{% if review.author %}{{ review.author }}{% endif %}</span></td>
        <td class="text-right">{{ review.date_added }}</td>
      </tr>
      <tr>
        <td colspan="2"><p>{% if review.text %}{{ review.text|striptags }}{% else %}{{ text_no_review_text }}{% endif %}</p>
          <div class="rating">
            {% for i in 1..5 %}
              {% if review.rating < i %}
                <i class="icon-star-empty"></i>
              {% else %}
                <i class="icon-star"></i>
              {% endif %}
            {% endfor %}
          </div>
        </td>
      </tr>
    </table>
  {% endfor %}
</div>
  <div class="row justify-between">
    <div>{{ review_list.reviews_pagination }}</div>
    <div>{{ review_list.reviews_results }}</div>
  </div>
{% else %}
  <p>{{ text_no_reviews }}</p>
{% endif %}
