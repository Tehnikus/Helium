<div class="module blog-category">
  <span class="h3">{{ text_blog }}</span>
  {% for category in categories %}
    {% if category.blog_category_id == blog_category_id %} 
      <a title="{{ category.name }}" href="{{ category.href }}" class="list-group-item active">{{ category.name }}</a> 
      {% if category.children %}
        {% for child in category.children %}
          {% if child.blog_category_id == child_id %}
            <a title="{{ child.name }}" href="{{ child.href }}" class="list-group-item active">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a> 
          {% else %} 
            <a title="{{ child.name }}" href="{{ child.href }}" class="list-group-item">&nbsp;&nbsp;&nbsp;- {{ child.name }}</a>
          {% endif %}
        {% endfor %}
      {% endif %}
    {% else %} 
      <a title="{{ category.name }}" href="{{ category.href }}" class="list-group-item">{{ category.name }}</a>
    {% endif %}
  {% endfor %}
</div>
