<div class="slideshow module">
  <div id="slideshow{{ module }}" class="scroll-x js_scroll" data-time="{{ time }}">
      {% for banner in banners %}
        <div class="slide">
          {% if banner.link %}
            <a title="{{ banner.title }}" href="{{ banner.link }}"><img loading="lazy" src="{{ banner.image }}" alt="{{ banner.title }}" /></a>
          {% else %}
            <img loading="lazy" src="{{ banner.image }}" alt="{{ banner.title }}" />
          {% endif %}
        </div>
      {% endfor %} 
  </div>
</div>