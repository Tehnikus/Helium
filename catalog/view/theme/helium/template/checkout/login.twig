    <fieldset>
      <legend>{{ text_new_customer }}</legend>
      <p>{{ text_checkout }}</p>
      <div class="form-control">
        {% if account == 'register' %}
          <input type="radio" name="account" id="register-checkout" value="register" checked="checked" />
          <label for="register-checkout">{{ text_register }}</label>
        {% else %}
          <input type="radio" name="account" id="register-checkout" value="register" />
          <label for="register-checkout">{{ text_register }}</label>
        {% endif %}
      </div>
      {% if checkout_guest %}
      <div class="form-control">
        {% if account == 'guest' %}
          <input type="radio" name="account" id="guest-checkout" value="guest" checked="checked" />
          <label for="guest-checkout">{{ text_guest }}</label>
        {% else %}
          <input type="radio" name="account" id="guest-checkout" value="guest" />
          <label for="guest-checkout">{{ text_guest }}</label>
        {% endif %}
      </div>
      {% endif %}
      <p>{{ text_register_account }}</p>
      <button type="submit" type="button" id="button-account" data-action="guestOrRegister" class="primary">
        {{ button_continue }}
      </button>
    </fieldset>
    <form id="login-form" action="{{ action }}" enctype="multipart/form-data">
      <fieldset>
        <legend>{{ text_returning_customer }}</legend>
        <p>{{ text_i_am_returning_customer }}</p>
        <div class="form-group">
          <label for="input-email">{{ entry_email }}</label>
          <input type="text" name="email" value="" placeholder="{{ entry_email }}" id="input-email" autocomplete="email"/>
        </div>
        <div class="form-group">
          <label for="input-password">{{ entry_password }}</label>
          <div class="inline-group">
            <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" autocomplete="current-password"/>
            <a class="button" href="{{ forgotten }}">{{ text_forgotten }}</a>
          </div>
        </div>
        <button data-action="login" data-form="login-form" type="button" class="primary">
          {{ button_login }}
        </button>
      </form>
    </fieldset>
