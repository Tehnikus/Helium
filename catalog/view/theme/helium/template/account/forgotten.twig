{{ header }}
{% include 'helium/template/common/breadcrumbs.twig' %}
<main role="main" id="account-forgotten">

  {% if error_warning %}
    <div class="has-error">
      <span role="alert" class="text-danger">
        <i class="icon-alert"></i> 
        {{ error_warning }}
      </span>
    </div>
  {% endif %}
  
  <h1>{{ heading_title }}</h1>
  {{ content_top }}
  <p>{{ text_email }}</p>
  <form action="{{ action }}" method="post" enctype="multipart/form-data" >
    <fieldset>
      <legend>{{ text_your_email }}</legend>
      <div class="form-group required {% if error_email %} has-error {% endif %}">
        <label for="input-email">{{ entry_email }}</label>
        <input
          type="email"
          name="email"
          value="{{ email }}"
          placeholder="{{ entry_email }}"
          id="input-email"
          inputmode="email"
          enterkeyhint="next"
        />
        {% if error_email %}
          <span role="alert" class="text-danger">{{ error_email }}</span>
        {% endif %} 
      </div>
    </fieldset>
    <div class="btn-group spaced">
      <a href="{{ back }}" class="button">{{ button_back }}</a>
      <button type="submit" class="primary">{{ button_continue }}</button>
    </div>
  </form>
  {{ content_bottom }}
</main>
{{ column_left }}
{{ column_right }}
{{ footer }}