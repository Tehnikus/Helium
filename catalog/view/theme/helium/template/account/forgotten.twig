{{ header }}
{% include 'helium/template/common/breadcrumbs.twig' %}
<main id="account-forgotten">

  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  
  <h1>{{ heading_title }}</h1>
  {{ content_top }}
  <p>{{ text_email }}</p>
  <form action="{{ action }}" method="post" enctype="multipart/form-data" >
    <fieldset>
      <legend>{{ text_your_email }}</legend>
      <div class="form-group required">
        <label for="input-email">{{ entry_email }}</label>
        <input
          type="email"
          name="email"
          value="{{ email }}"
          placeholder="{{ entry_email }}"
          id="input-email"
          inputmode="email"
          enterkeyhint="next"
        />
        {% if error_email %}
          <div class="text-danger">{{ error_email }}</div>
        {% endif %} 
      </div>
    </fieldset>
    <div class="buttons clearfix">
      <div class="pull-left"><a href="{{ back }}" class="button">{{ button_back }}</a></div>
      <div class="pull-right">
        <button type="submit" class="primary">{{ button_continue }}</button>
      </div>
    </div>
  </form>
  {{ content_bottom }}
</main>
{{ column_left }}
{{ column_right }}
{{ footer }}