{{ header }}
<main role="main" id="account-return">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}"> {{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="icon-alert"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="row"> {{ column_left }}

    <, id="content"> {{ content_top }}
      <h1>{{ heading_title }}</h1>
      <p>{{ text_description }}</p>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" >
        <fieldset>
          <legend>{{ text_order }}</legend>
          
          <div class="form-group required">
            <label for="input-firstname">{{ entry_firstname }}</label>        
            <input
              type="text"
              name="firstname"
              value="{{ firstname }}"
              placeholder="{{ entry_firstname }}"
              id="input-firstname"
              inputmode="text"
              enterkeyhint="next"
              autocapitalize="words"
              minlength="3" maxlength="32"
            />
            {% if error_firstname %}
              <span class="text-danger">{{ error_firstname }}</div>
            {% endif %}
          </div>

          <div class="form-group required">
            <label for="input-lastname">{{ entry_lastname }}</label>
            <input
              type="text"
              name="lastname"
              value="{{ lastname }}"
              placeholder="{{ entry_lastname }}"
              id="input-lastname"
              inputmode="text"
              enterkeyhint="next"
              autocapitalize="words"
              minlength="3" maxlength="32"
            />
            {% if error_lastname %}
              <span class="text-danger">{{ error_lastname }}</div>
            {% endif %}
          </div>

          <div class="form-group required">
            <label for="input-email">{{ entry_email }}</label>
            <input
              type="email"
              name="email"
              value="{{ email }}"
              placeholder="{{ entry_email }}"
              id="input-email"
              inputmode="email"
              enterkeyhint="next"
            />
            {% if error_email %}
              <span class="text-danger">{{ error_email }}</div>
            {% endif %} 
          </div>

          <div class="form-group required">
            <label for="input-telephone">{{ entry_telephone }}</label>
            <input
              type="tel"
              name="telephone"
              value="{{ telephone }}"
              placeholder="{{ entry_telephone }}"
              id="input-telephone"
              inputmode="tel"
              enterkeyhint="next"
              minlength="3" maxlength="32"
            />
            {% if error_telephone %}
              <span class="text-danger">{{ error_telephone }}</div>
            {% endif %} 
          </div>

          <div class="form-group required">
            <input type="text" name="order_id" value="{{ order_id }}" placeholder="{{ entry_order_id }}" id="input-order-id" />
            <label for="input-order-id">{{ entry_order_id }}</label>
            {% if error_order_id %}
              <span class="text-danger">{{ error_order_id }}</div>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="input-date-ordered">{{ entry_date_ordered }}</label>
            <input 
              type="date" 
              name="date_ordered" 
              value="{{ date_ordered }}" 
              placeholder="{{ entry_date_ordered }}" 
              data-date-format="YYYY-MM-DD" 
              id="input-date-ordered"
              step="1"
            />
          </div>
        </fieldset>
        <fieldset>
          <legend>{{ text_product }}</legend>
          <div class="form-group required">
            <label for="input-product">{{ entry_product }}</label>
            <input type="text" name="product" value="{{ product }}" placeholder="{{ entry_product }}" id="input-product" />
            <input type="hidden" name="product_id" value="{{ product_id }}" />
            {% if error_product %}
              <span class="text-danger">{{ error_product }}</div>
            {% endif %}
          </div>
          <div class="form-group required">
            <label for="input-model">{{ entry_model }}</label>
              <input type="text" name="model" value="{{ model }}" placeholder="{{ entry_model }}" id="input-model" />
              {% if error_model %}
                <span class="text-danger">{{ error_model }}</div>
              {% endif %}
          </div>
          <div class="form-group">
            
            <input type="number" name="quantity" value="{{ quantity }}" placeholder="{{ entry_quantity }}" id="input-quantity" />
            <label for="input-quantity">{{ entry_quantity }}</label>
            
          </div>
          <div class="form-group required">
            <legend>{{ entry_reason }}</legend>
            {% for return_reason in return_reasons %}
              {% if return_reason.return_reason_id == return_reason_id %}
                <div class="form-control">
                  <input type="radio" name="return_reason_id" value="{{ return_reason.return_reason_id }}" checked="checked" />
                  <label>{{ return_reason.name }}</label>
                </div>
              {% else %}
                <div class="form-control">
                  <input type="radio" name="return_reason_id" value="{{ return_reason.return_reason_id }}" />
                  <label>{{ return_reason.name }}</label>
                </div>
              {% endif %}
            {% endfor %}
            {% if error_reason %}
              <span class="text-danger">{{ error_reason }}</div>
            {% endif %} 
          </div>
          <div class="form-group required">
            <legend>{{ entry_opened }}</legend>
            {% if opened %}
              <input type="radio" name="opened" value="1" checked="checked" />
              <label>{{ text_yes }}</label>
            {% else %}
              <input type="radio" name="opened" value="1" />
              <label>{{ text_yes }}</label>
            {% endif %}
            {% if not opened %}
              <input type="radio" name="opened" value="0" checked="checked" />
              <label>{{ text_no }}</label>
            {% else %}
              <input type="radio" name="opened" value="0" />
              <label>{{ text_no }}</label>
            {% endif %}
          </div>
          <div class="form-group">
            <label for="input-comment">{{ entry_fault_detail }}</label>
            
            <textarea name="comment" rows="10" placeholder="{{ entry_fault_detail }}" id="input-comment" class="form-control">{{ comment }}</textarea>
            
          </div>
          {{ captcha }}
        </fieldset>
        {% if text_agree %}
          <div class="form-control">
            {% if agree %}
              <input type="checkbox" name="agree" value="1" checked="checked" />
              <label for="agree_with_terms">{{ text_agree }}</label>
            {% else %}
              <input type="checkbox" name="agree" value="1" />
              <label for="agree_with_terms">{{ text_agree }}</label>
            {% endif %}
            <button type="submit" class="primary">{{ button_continue }}</button>
          </div>
        {% else %}
        <div class="buttons clearfix">
          <div class="pull-left"><a href="{{ back }}" class="default">{{ button_back }}</a></div>
          <div class="pull-right">
            <button type="submit" class="primary">{{ button_submit }}</button>
          </div>
        </div>
        {% endif %}
      </form>
</main>
{{ content_bottom }}
{{ column_right }}
{{ footer }} 