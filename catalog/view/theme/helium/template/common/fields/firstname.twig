<div class="form-group {% if required %} required {% endif %} {% if error_firstname %} has-error {% endif %}">
    <label for="input-{{ type }}-firstname">{{ entry_firstname }}</label>
    <input
      type="text"
      name="firstname"
      value="{{ firstname }}"
      placeholder="{{ entry_firstname }}"
      id="input-{{ type }}-firstname"
      inputmode="text"
      enterkeyhint="next"
      autocapitalize="words"
      minlength="3" maxlength="32"
      autocomplete="given-name"
    />
    {% if error_firstname %}
      <span role="alert" class="text-danger">{{ error_firstname }}</span>
    {% endif %}
</div>