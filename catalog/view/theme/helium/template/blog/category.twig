{{ header }}
{% include 'helium/template/common/breadcrumbs.twig' %}
{{ content_top }}
<main role="main" id="blog-category">
  <h1>{{ heading_title }}</h1>
  {% if thumb or description %}
      {% if thumb %}
        <img 
          loading="lazy" 
          src="{{ thumb }}" 
          alt="{{ heading_title }}" 
          title="{{ heading_title }}" 
          width="{{ width }}"
          height="{{ height }}"
          class="img-thumbnail" 
        />
      {% endif %}
      {% if description %}
        {{ description }}
      {% endif %}
  {% endif %}
  {% if articles %}
    <div class="article grid">  
      {% for article in articles %} 
        {% include 'helium/template/blog/article_miniature.twig' with {article: article} %}
      {% endfor %}
    </div>
    <div class="row">
      {{ pagination }}
    </div>
  {% else %}
    <p>{{ text_empty }}</p>
    <div class="buttons">
      <div class="pull-right"><a href="{{ continue }}" class="primary">{{ button_continue }}</a></div>
    </div>
  {% endif %}
</main>
{{ column_left }} 
{{ column_right }}
{{ content_bottom }}
{{ footer }}