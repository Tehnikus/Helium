{{ header }}
{% include 'helium/template/common/breadcrumbs.twig' %}
<main>
{{ content_top }}
  <div class="row">
    <div id="content">
      <h1>{{ heading_title }}</h1>
      {% if articles %}
        <div class="product grid">  
        {% for article in articles %} 
          {% include 'helium/template/blog/article_miniature.twig' with {article: article} %}
        {% endfor %}
        </div>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
        </div>
      {% else %}
        <p>{{ text_empty }}</p>
        <div class="buttons">
          <div class="pull-right"><a href="{{ continue }}" class="primary">{{ button_continue }}</a></div>
        </div>
      {% endif %}
      </div>
    </div>
{{ content_bottom }}
</main>
{{ column_left }}
{{ column_right }}
{{ footer }}