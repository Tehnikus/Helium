
<h1>{{ heading_title }}</h1>
<h2>{{ text_location }}</h2>
<div class="address">
  <div>
    <h3>{{ store }}</h3>
    {% if image %}
      <div>
        <img loading="lazy" src="{{ image }}" alt="{{ store }}" title="{{ store }}" />
      </div>
    {% endif %}
    <div>
      <div>
        
        <address>{{ address|nl2br }}</address>
        {% if geocode %}
          <a class="button" href="https://maps.google.com/maps?q={{ geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank"><i class="icon-location"></i> {{ button_map }}</a>
        {% endif %}
      </div>
      <div>
        <p>{{ text_telephone }}</p>
        <a href="tel:{{ telephone }}" rel="phone">{{ telephone }}</a>
      </div>
      <div>
        {% if fax %}
          <p>{{ text_fax }}</p>
          <a href="tel:{{ fax }}" rel="phone">{{ fax }}</a>
        {% endif %}
      </div>
      <div>
        {% if open %}
          <p>{{ text_open }}</p>
          {{ open|nl2br }}
        {% endif %}
        {% if comment %}
          <p>{{ text_comment }}</p>
          {{ comment }}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% if locations %}
  <h3>{{ text_store }}</h3>
  
  {% for location in locations %}
    <div class="">
      <h2>{{ location.name }}</h2>
      
        <div>
          {% if location.image %}
            <div class="col-sm-3"><img loading="lazy" src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail" /></div>
          {% endif %}
          <div class="col-sm-3">
            <p>{{ location.name }}</p>
            <address>
              {{ location.address|nl2br }}
            </address>
            {% if location.geocode %}
              <a href="https://maps.google.com/maps?q={{ location.geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" ><i class="icon-location"></i> {{ button_map }}</a>
            {% endif %}
          </div>
          <div>
            {% if location.map %}
              {{ location.map|raw }}
            {% endif %}
          </div>
          <div> 
            <p>{{ text_telephone }}</p>
            {{ location.telephone }}
            
            {% if location.fax %}
              <p>{{ text_fax }}</p>
              {{ location.fax }}
            {% endif %}
          </div>
          <div>
            {% if location.open %}
            <p>{{ text_open }}</p>
            {{ location.open|nl2br }}
            
            {% endif %}
            {% if location.comment %}
            <p>{{ text_comment }}</p>
            {{ location.comment }}
            {% endif %}
          </div>
      </div>
    </div>
  {% endfor %}
  
{% endif %}

